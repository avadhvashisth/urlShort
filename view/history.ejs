
<html lang="en">
        <head>
                  <!--Import Google Icon Font-->
          <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
          <!--Import materialize.css-->
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
          <!--Let browser know website is optimized for mobile-->
          <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            <title>URL Shortener</title>
            <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"> -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        </head>
    <body>
            <%- include partials/header.ejs %>

        <div class="container">
            <h1 style="text-align: center;" class="header">
               History
            </h1>
            
            <table class="highlight striped centered">
                    <thead>
                      <tr>
                          <th>Name</th>
                          <th>Original URL</th>
                          <th>Shortened URL</th>
                      </tr>
                    </thead>
            
                    <tbody>
                    <% for(var i=0; i < urls.length; i++){ %>
                      <tr>
                        <td><%= "URL" + i %></td>
                        <td><%= urls[i].url %></li>
                        <%if (urls[i].uniqueId != null) { %>
                            <td><%= "RANDOM URL= " + "https://frozen-temple-15659.herokuapp.com/api/url/" + urls[i].uniqueId %></td>
                        <% } %>
                        <%if (urls[i].name != null) { %>
                            <td><%= "CUSTOM URL= " + "https://frozen-temple-15659.herokuapp.com/api/custom/" + urls[i].name %></td>
                        <% } %>
                      </tr>
                    <% } %>
                    </tbody>
            </table>
        </div>
          <!--Import jQuery before materialize.js-->
      <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
    </body>
</html>
