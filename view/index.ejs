<html lang="en">
    <head>
        <title>URL Shortener</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    </head>
    <body>
        <div class="container">
            <h1 style="text-align: center;" class="header">
                URL Shortener
            </h1>
            <form method="post">
             <input style="width: 100%; margin: 10px; padding: 10px; border: 2px solid skyblue; border-radius: 10px;" type="text" name="item" placeholder="Add new item.." required>
             <button style="text-align: center; margin: auto; display: block;" class="btn btn-primary btn-lg" type="submit" name="button">Create url</button>
            </form>
            <a href="" id="myInput"></a>
            <button style="display: none;" id="copyUrl" onclick="copyToClipboard('#myInput')">Copy text!</button>
            <script type="text/javascript" src="assets/url-short.js"></script>
        </div>
    </body>
</html>
