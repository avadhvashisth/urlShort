
<html lang="en">
    <head>
              <!--Import Google Icon Font-->
      <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>URL Shortener</title>
        <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"> -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    </head>
    <body>
            <%- include partials/header.ejs %>
            
        <div class="container">
            <h1 style="text-align: center;" class="header">
                Enter your URL
            </h1>
            <form method="post">
             <input style="width: 100%; margin: 10px; padding: 10px; border: 2px solid skyblue; border-radius: 10px;" type="text" name="url" placeholder="Add new item.." required>
             <input style="width: 100%; margin: 10px; padding: 10px; border: 2px solid skyblue; border-radius: 10px;" type="text" name="name" placeholder="Enter name" required>
             <button style="text-align: center; margin: auto; display: block;" class="btn btn-primary btn-lg" type="submit" name="button" onclick="horizontal()">Create url</button>
            </form>
            <br>
            <div id="hello"></div>
            
            <a href="" id="myInput"></a>
            <button style="display:none;" id="copyUrl" onclick="copied();copyToClipboard('#myInput');" class="btn btn-primary btn-lg">Copy text!</button>
            <span style="display: none" id="ahem" class='pink-text'>Link Copied</span>
            <script type="text/javascript" src="assets/url-short-custom.js"></script>
            
      <!--Import jQuery before materialize.js-->
      <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
      <script>
      var flag = 0;
      function horizontal() {
        var hori = document.createElement("hr");
        var element = document.getElementById("hello");
        if(flag === 0){
          element.appendChild(hori);
          flag = 1;
        }
      }
      function copied() {
        document.getElementById("ahem").style.display = "inline";
      }
      </script>
        </div>
    </body>
</html>